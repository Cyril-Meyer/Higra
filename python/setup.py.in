
from setuptools import setup
import os.path
import glob

def find_compiled_lib():
    files = glob.glob(os.path.join('higra', 'higram*'))
    if len(files) != 1:
        raise Exception("None or multiple compiled module found !")
    return os.path.basename(files[0])

setup(
    name='higra',
    version='@higra_VERSION@',
    author='Benjamin Perret',
    author_email='benjamin.perret@esiee.fr',
    description='Hierarchical Graph Analysis',
    long_description=open('README.md').read(),
    packages=[
        'higra',
        'higra.accumulator',
        'higra.algo',
        'higra.assessment',
        'higra.attribute',
        'higra.hierarchy',
        'higra.image',
        'higra.io_utils'],
    package_data={'higra':[find_compiled_lib()]},
    install_requires=[
        'numpy',
    ],
    zip_safe=False,
    license = 'CeCILL-B',
)
